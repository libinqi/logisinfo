<script>
//调用插件
$(function () {
    $.ProvinceCity('sProvinceCode', 'sCityCode', 'sAreaCode', function (selectProvince, selectCity, selectArea) {
        $("#sProvince").val(selectProvince);
        $("#sCity").val(selectCity);
        $("#sArea").val(selectArea);
        $("#per_scity").html(selectProvince + selectCity);
    });
    $.ProvinceCity('eProvinceCode', 'eCityCode', 'eAreaCode', function (selectProvince, selectCity, selectArea) {
        $("#eProvince").val(selectProvince);
        $("#eCity").val(selectCity);
        $("#eArea").val(selectArea);
        $("#per_ecity").html(selectProvince + selectCity);
    });

    $("#weight").on("change", function () {
        var $goodsType = $("#goodsTypeCode");
        var selectedIndex = $goodsType[0].selectedIndex;
        var goodsType = $goodsType[0].options[selectedIndex].text;
        var weight = $(this).val();

        if (weight != 0) {
            $("#per_weight").html(weight + "吨");
            $("#per_goodsWeight").html(",有" + weight + "吨" + goodsType);
        }
    });

    $("#goodsTypeCode").on("change", function () {
        var selectedIndex = $(this)[0].selectedIndex;
        var goodsType = $(this)[0].options[selectedIndex].text;
        var weight = $("#weight").val();
        $("#per_goodsType").html(goodsType);

        if (weight != 0) {
            $("#per_goodsWeight").html(",有" + weight + "吨" + goodsType);
        }
        else {
            $("#per_goodsWeight").html(",有" + goodsType);
        }
    });

    $("#vehicleLength").on("change", function () {
        var vehicleText = "";
        var vehicleLength = $("#vehicleLength").val();

        var $vehicleType = $("#vehicleTypeCode");
        var selectedIndex = $vehicleType[0].selectedIndex;
        var vehicleType = $vehicleType[0].options[selectedIndex].text;

        var vehicleCount = $("#vehicleCount").val();

        if (vehicleLength != 0) {
            vehicleText += vehicleLength + "米" + vehicleType + vehicleCount + "辆";
        }
        else {
            vehicleText += vehicleType + vehicleCount + "辆";
        }

        $("#per_vehicle").html(vehicleText);
        $("#per_goodsVehicle").html(",求" + vehicleText);
    });

    $("#vehicleTypeCode").on("change", function () {
        var vehicleText = "";
        var vehicleLength = $("#vehicleLength").val();

        var $vehicleType = $("#vehicleTypeCode");
        var selectedIndex = $vehicleType[0].selectedIndex;
        var vehicleType = $vehicleType[0].options[selectedIndex].text;

        var vehicleCount = $("#vehicleCount").val();

        if (vehicleLength != 0) {
            vehicleText += vehicleLength + "米" + vehicleType + vehicleCount + "辆";
        }
        else {
            vehicleText += vehicleType + vehicleCount + "辆";
        }

        $("#per_vehicle").html(vehicleText);
        $("#per_goodsVehicle").html(",求" + vehicleText);
    });

    $("#vehicleCount").on("change", function () {
        var vehicleText = "";
        var vehicleLength = $("#vehicleLength").val();

        var $vehicleType = $("#vehicleTypeCode");
        var selectedIndex = $vehicleType[0].selectedIndex;
        var vehicleType = $vehicleType[0].options[selectedIndex].text;

        var vehicleCount = $("#vehicleCount").val();

        if (vehicleLength != 0) {
            vehicleText += vehicleLength + "米" + vehicleType + vehicleCount + "辆";
        }
        else {
            vehicleText += vehicleType + vehicleCount + "辆";
        }

        $("#per_vehicle").html(vehicleText);
        $("#per_goodsVehicle").html(",求" + vehicleText);
    });

    $("#freeText").on("change", function () {
        var freeText = $(this).val();

        if (freeText) {
            $("#per_freeText").html("," + freeText);
        }
    });

    $("input[name='loadingTime']").each(function () {
        $(this).click(function () {
            var parent = $(this).parent();
            $("#per_loadingTime").html(parent.text());
        });
    });

    $("#contact").change(function () {
        var contact = $(this).val();
        $("#per_contact").html(contact);
    });
    $("#phone").change(function () {
        var phone = $(this).val();
        $("#per_phone").html(phone);
    });

    $("#tel").change(function () {
        var tel = $(this).val();
        $("#per_tel").html("/" + tel);
    });

    $.validator.addMethod("isMobile", function (value, element) {
        var length = value.length;
        var mobile = /^(13[0-9]|15[012356789]|18[0236789]|14[57])[0-9]{8}$/;
        return this.optional(element) || (length == 11 && mobile.test(value));
    }, "手机号码格式正不正确");

    $.validator.addMethod("isTel", function (value, element) {
        var tel = /^(0[0-9]{2,3}\-)?([2-9][0-9]{6,7})+(\-[0-9]{1,4})?$/;
        return this.optional(element) || (tel.test(value));
    }, "电话号码格式不正确");

    $('#goods-form').validate({
        rules: {
            sProvinceCode: "required",
            eProvinceCode: "required",
            weight: {
                required: true,
                number: true,
                min: 1
            },
            vehicleLength: {
                required: true,
                number: true,
                min: 2
            },
            vehicleCount: {
                required: true,
                number: true,
                min: 1
            },
            goodsTypeCode: "required",
            contact: "required",
            phone: {
                number: true,
                minlength: 11
            },
            phone: "isMobile",
            tel: "isTel"
        },
        messages: {
            sProvinceCode: "出发城市必选",
            eProvinceCode: "到达城市必选",
            weight: {
                required: "货物重量必填",
                number: "货物重量为数字",
                min: "货物重量不能少于0"
            },
            vehicleLength: {
                required: "车长必填",
                number: "车长必须为数字",
                min: "车长不能少于2米"
            },
            vehicleCount: {
                required: "求车辆数必填",
                number: "求车辆数必须为数字",
                min: "求车辆数不能少于1"
            },
            goodsTypeCode: "货物类型必选",
            contact: "联系人不能为空",
            phone: {
                required: "手机号码不能为空",
                number: "手机号码必须为数字",
                minlength: "手机号码长度为11位"
            }
        },
        highlight: function (element) {
            $(element).closest('.control-group').removeClass('success').addClass('error');
        },
        submitHandler: function (form) {
            if ($("#phone").val() == "" && $("#tel").val() == "") {
                $("#phone").focus();
                return false;
            }
            form.submit();
        }
    });

    // Change this to the location of your server-side upload handler:
    var url = 'http://localhost:3001/upload/goods';

    $('#fileupload').fileupload({
        url: url,
        dataType: 'json',
        done: function (e, data) {
            $.each(data.result.files, function (index, file) {
                $('#per_image').attr("src", file.url);
                $('#goods_image').val(file.url);
            });
        }
    }).prop('disabled', !$.support.fileInput)
            .parent().addClass($.support.fileInput ? undefined : 'disabled');
});
</script>