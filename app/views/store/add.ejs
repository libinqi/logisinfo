<script src="/js/jquery.validate.min.js" type="text/javascript"></script>
<script src="/js/jquery.ui.widget.js"></script>
<script src="/js/jquery.fileupload.js"></script>
<script>
    //调用插件
    $(function () {
        $.ProvinceCity('provinceCode', 'cityCode', 'areaCode', function (selectProvince, selectCity, selectArea) {
            $("#province").val(selectProvince);
            $("#city").val(selectCity);
            $("#area").val(selectArea);
            $("#per_city").html(selectProvince + selectCity + selectArea);
        });

        $("#storeName").change(function () {
            var storeName = $(this).val();
            if (storeName) {
                $("#per_storeName").html(storeName);
            }
        });

        $("#storeTypeCode").change(function () {
            var selectedIndex = $(this)[0].selectedIndex;
            $("#per_storeType").html($(this)[0].options[selectedIndex].text);
        });

        $("input[name='busneissScopeCode']").each(function () {
            $(this).click(function () {
                var parent = $(this).parent();
                $("#per_busneissScope").html(parent.text());
            });
        });

        $("#storeArea").change(function () {
            var storeArea = $(this).val();
            if (storeArea) {
                $("#per_storeArea").html(storeArea + "㎡");
            }
        });

        $("input[name='status']").each(function () {
            $(this).click(function () {
                var status = $(this).val();
                $("#per_status").html((status == 1 ? "已发布" : "未发布"));
            });
        });

        $("#contact").change(function () {
            var contact = $(this).val();
            $("#per_contact").html(contact);
        });
        $("#address").change(function () {
            var address = $(this).val();
            $("#per_address").html(address);
        });
        $("#phone").change(function () {
            var phone = $(this).val();
            $("#per_phone").html(phone);
        });

        $("#tel").change(function () {
            var tel = $(this).val();
            if (tel)
                $("#per_tel").html("/" + tel);
        });


        $.validator.addMethod("isMobile", function (value, element) {
            var length = value.length;
            var mobile = /^(13[0-9]|15[012356789]|18[0236789]|14[57])[0-9]{8}$/;
            return this.optional(element) || (length == 11 && mobile.test(value));
        }, "手机号码格式正不正确");

        $.validator.addMethod("isTel", function (value, element) {
            var tel = /^(0[0-9]{2,3}\-)?([2-9][0-9]{6,7})+(\-[0-9]{1,4})?$/;
            return this.optional(element) || (tel.test(value));
        }, "电话号码格式不正确");

        $('#store-form').validate({
            rules: {
                provinceCode: "required",
                storeName: "required",
                storeArea: {
                    required: true,
                    number: true,
                    min: 0
                },
                useArea: {
                    number: true,
                    min: 0
                },
                referPrice: {
                    number: true,
                    min: 0
                },
                storeType: "required",
                contact: "required",
                address: "required",
                phone: {
                    number: true,
                    minlength: 11
                },
                phone: "isMobile",
                tel: "isTel"
            },
            messages: {
                provinceCode: "所在地必选",
                storeName: "仓库名称必填",
                storeArea: {
                    required: "仓库面积必填",
                    number: "仓库面积必须为数字",
                    min: "仓库面积不能少于0"
                },
                useArea: {
                    number: "可用面积必须为数字",
                    min: "可用面积不能少于0"
                },
                referPrice: {
                    number: "参考价格必须为数字",
                    min: "参考价格不能少于0"
                },
                storeType: "仓库类型必选",
                contact: "联系人不能为空",
                address: "具体位置不能为空",
                phone: {
                    required: "手机号码不能为空",
                    number: "手机号码必须为数字",
                    minlength: "手机号码长度为11位"
                }
            },
            highlight: function (element) {
                $(element).closest('.control-group').removeClass('success').addClass('error');
            },
            submitHandler: function (form) {
                if ($("#phone").val() == "" && $("#tel").val() == "") {
                    $("#phone").focus();
                    return false;
                }
                form.submit();
            }
        });

        // Change this to the location of your server-side upload handler:
        var url = 'http://localhost:3001/upload/store';

        $('#fileupload').fileupload({
            url: url,
            dataType: 'json',
            done: function (e, data) {
                $.each(data.result.files, function (index, file) {
                    $('#per_image').attr("src", file.url);
                    $('#store_image').val(file.url);
                });
            },
            progressall: function (e, data) {
                var progress = parseInt(data.loaded / data.total * 100, 10);
                $('#progress .progress-bar').css(
                        'width',
                        progress + '%'
                );
            }
        }).prop('disabled', !$.support.fileInput)
                .parent().addClass($.support.fileInput ? undefined : 'disabled');
    });
</script>