<script type="text/javascript">
    $(function () {
        var trainStoreType = '<%=trainStoreTypeCode%>';
        var trainStoreLevel = '<%=trainStoreLevelCode%>';

        if (trainStoreType && trainStoreType != 'undefined')
            $("#trainStoreType").val(trainStoreType).change();
        if (trainStoreLevel && trainStoreLevel != 'undefined')
            $("#trainStoreLevel").val(trainStoreLevel).change();
    });
    function search() {
        var url = "";
        var trainStoreType = $("#trainStoreType").val();
        var trainStoreLevel = $("#trainStoreLevel").val();

        if (trainStoreType && trainStoreType != "选择货场类型") {
            url += "trainStoreType=" + trainStoreType;
        }
        if (trainStoreLevel && trainStoreLevel != "选择货场级别") {
            url += "&trainStoreLevel=" + trainStoreLevel;
        }
        if (url) {
            if (url.substr(0, 1) == "&")
                url = url.substr(1, url.length - 1);
            window.location.href = "/trainstore/all?" + url;
        }
        else
        {
            window.location.href = "/trainstore/all";
        }
    }
</script>