<script src="/js/jquery.provincesCity.js" type="text/javascript"></script>
<script src="/js/core/city.js" type="text/javascript"></script>
<script src="/js/jquery.validate.min.js" type="text/javascript"></script>
<script src="/js/jquery.ui.widget.js"></script>
<script src="/js/jquery.fileupload.js"></script>
<script>
    //调用插件
    $(function () {
        $.ProvinceCity('provinceCode', 'cityCode', 'areaCode', function (selectProvince, selectCity, selectArea) {
            $("#province").val(selectProvince);
            $("#city").val(selectCity);
            if (selectArea != "请选择区/县") {
                $("#per_city").html(selectProvince + selectCity + selectArea);
                $("#area").val(selectArea);
            }
            else {
                $("#per_city").html(selectProvince + selectCity);
                $("#area").val('');
            }
        });

        $('#provinceCode').val('<%=trainLine.provinceCode%>').change();
        $('#cityCode').val('<%=trainLine.cityCode%>').change();
        $('#areaCode').val('<%=trainLine.areaCode%>').change();

        $("#trainLineName").change(function () {
            var trainLineName = $(this).val();
            if (trainLineName) {
                $("#per_trainLineName").html(trainLineName);
            }
        });

        $("#dayCapacity").change(function () {
            var dayCapacity = $(this).val();
            if (dayCapacity) {
                $("#per_dayCapacity").html(dayCapacity + '吨');
            }
        });

        $("#yearCapacity").change(function () {
            var yearCapacity = $(this).val();
            if (yearCapacity) {
                $("#per_yearCapacity").html(yearCapacity + "吨");
            }
        });

        $("#trainBoxNumber").change(function () {
            var trainBoxNumber = $(this).val();
            if (trainBoxNumber) {
                $("#per_trainBoxNumber").html(trainBoxNumber + "辆");
            }
        });

        $("input[name='status']").each(function () {
            $(this).click(function () {
                var status = $(this).val();
                $("#per_status").html((status == 1 ? "已发布" : "未发布"));
            });
        });

        $("#contact").change(function () {
            var contact = $(this).val();
            $("#per_contact").html(contact);
        });
        $("#address").change(function () {
            var address = $(this).val();
            $("#per_address").html(address);
        });
        $("#phone").change(function () {
            var phone = $(this).val();
            $("#per_phone").html(phone);
        });

        $("#tel").change(function () {
            var tel = $(this).val();
            if (tel)
                $("#per_tel").html("/" + tel);
        });


        $.validator.addMethod("isMobile", function (value, element) {
            var length = value.length;
            var mobile = /^(13[0-9]|15[012356789]|18[0236789]|14[57])[0-9]{8}$/;
            return this.optional(element) || (length == 11 && mobile.test(value));
        }, "手机号码格式正不正确");

        $.validator.addMethod("isTel", function (value, element) {
            var tel = /^(0[0-9]{2,3}\-)?([2-9][0-9]{6,7})+(\-[0-9]{1,4})?$/;
            return this.optional(element) || (tel.test(value));
        }, "电话号码格式不正确");

        $('#trainline-form').validate({
            rules: {
                provinceCode: "required",
                trainLineName: "required",
                dayCapacity: {
                    required: true,
                    number: true,
                    min: 0
                },
                yearCapacity: {
                    required: true,
                    number: true,
                    min: 0
                },
                yearShipments: {
                    number: true,
                    min: 0
                },
                trainBoxNumber: {
                    required: true,
                    number: true,
                    min: 0
                },
                useableTrainBoxNumber: {
                    number: true,
                    min: 0
                },
                lineLength: {
                    number: true,
                    min: 0
                },
                contact: "required",
                address: "required",
                phone: {
                    number: true,
                    minlength: 11
                },
                phone: "isMobile",
                tel: "isTel"
            },
            messages: {
                provinceCode: "所在地必选",
                trainLineName: "专线名称必填",
                dayCapacity: {
                    required: "日装载量必填",
                    number: "日装载量必须为数字",
                    min: "日装载量不能少于0"
                },
                yearCapacity: {
                    required: "年吞吐量必填",
                    number: "年吞吐量必须为数字",
                    min: "年吞吐量不能少于0"
                },
                yearShipments: {
                    number: "年发货量必须为数字",
                    min: "年发货量不能少于0"
                },
                trainBoxNumber: {
                    required: "停放车皮总数量必填",
                    number: "停放车皮总数量必须为数字",
                    min: "停放车皮总数量不能少于0"
                },
                useableTrainBoxNumber: {
                    number: "可停放车皮数量必须为数字",
                    min: "可停放车皮数量不能少于0"
                },
                lineLength: {
                    number: "线路长度必须为数字",
                    min: "线路长度不能少于0"
                },
                contact: "联系人不能为空",
                address: "具体位置不能为空",
                phone: {
                    required: "手机号码不能为空",
                    number: "手机号码必须为数字",
                    minlength: "手机号码长度为11位"
                }
            },
            highlight: function (element) {
                $(element).closest('.control-group').removeClass('success').addClass('error');
            },
            submitHandler: function (form) {
                if ($("#phone").val() == "" && $("#tel").val() == "") {
                    $("#phone").focus();
                    return false;
                }
                form.submit();
            }
        });

        // Change this to the location of your server-side upload handler:
        var url = 'http://img1.jt56.org/upload/trainline';

        $('#fileupload').fileupload({
            url: url,
            dataType: 'json',
            done: function (e, data) {
                $.each(data.result.files, function (index, file) {
                    $('#per_image').attr("src", file.url);
                    $('#trainLine_image').val(file.url);
                });
            },
            progressall: function (e, data) {
                var progress = parseInt(data.loaded / data.total * 100, 10);
                $('#progress .progress-bar').css(
                        'width',
                        progress + '%'
                );
            }
        }).prop('disabled', !$.suptrainLine.fileInput)
                .parent().addClass($.suptrainLine.fileInput ? undefined : 'disabled');
    });
</script>